@model PagedList<System.Data.DataRow>
@{
    ViewBag.Title = "DataRow集合分页";
}

<h2>DataRow集合分页</h2>
<div class="description">该示例演示如果不使用Entity Framework，而用ADO.NET数据访问技术调用sql server存储过程，使用DataAdapter填充DataTable，并调用PagedList构造函数生成PagedList&lt;DataRow&gt;的分页数据对象。</div>
<table width="100%">
    <tr>
        <th>标题</th>
        <th>发布日期</th>
        <th>作者</th>
        <th>来源</th>
    </tr>
    @foreach (var dr in Model)
    {
        <tr><td>@dr["Title"]</td><td>@dr["PubDate"]</td><td>@dr["Author"]</td><td>@dr["Source"]</td></tr>
    }
</table>
@Html.Pager(Model,new PagerOptions{PageIndexParameterName = "id",ShowPageIndexBox = true,PageIndexBoxType = PageIndexBoxType.DropDownList,ShowGoButton = false})

@section Scripts{@{Html.RegisterMvcPagerScriptResource();}}