@model PagedList<Article>
@{
    ViewBag.Title = "显示自定义信息";
}

<h2>显示自定义信息</h2>
<div class="description">本示例演示如何显示分页相关信息，如总页数、总记录数及当前页数等。</div>
<table width="100%">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PubDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Source)
                </th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PubDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Source)
                    </td>
                </tr>
            }
</table>
<div><div style="float:left;width:50%">共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页</div>
    @Html.Pager(Model,new PagerOptions{ShowPageIndexBox = true,PageIndexParameterName = "id",PageIndexBoxType = PageIndexBoxType.DropDownList,ShowGoButton = false},new{style="float:right"})</div>

@section Scripts{@{Html.RegisterMvcPagerScriptResource();}}