@using KSOA.Model;
@model Admin_CPcompany
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>修改CP信息</title>
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script type="text/javascript">
        //表单验证
        $(function () {
            $("form").validate({
                errorPlacement: function (lable, element) {
                    element.ligerTip({ content: lable.html(), appendIdTo: lable });
                },
                success: function (lable) {
                    lable.ligerHideTip();
                }
            });
        });
    </script>
</head>
<body>
    <form method="post">
        <div id="contentTab">
            <ul class="tab_nav">
                <li class="selected"><a onclick="tabs('#contentTab',0);" href="javascript:;">新增CP</a></li>
            </ul>
            <div class="tab_con" style="display:block;">
                <input type="hidden" value="@Model.ID" name="cpid" />
                <table class="form_table">
                    <col width="180px">
                    <col>
                    <tbody>
                        <tr>
                            <th>CP名称：</th>
                            <td>
                                @Html.TextBox("CPName", Model.CPname, new { @class = "txtInput normal required", maxlength = "100" })
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><input type="submit" id="btnSubmit" value="提交更新" class="btnSubmit" /></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><label>@(ViewBag.msg ?? "")</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</body>
</html>
