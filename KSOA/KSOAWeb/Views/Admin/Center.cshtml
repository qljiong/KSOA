@using KSOA.Model;
@model siteconfig
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>管理首页</title>
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
</head>
<body class="mainbody">
    <form id="form1">
        <div class="navigation nav_icon">你好，<i>@ViewBag.userName</i>，欢迎进入后台管理中心</div>
        <div class="line10"></div>

        <div class="line10"></div>
        <div class="nlist2 clearfix">
            <h2>站点信息</h2>
            <ul>
                <li>站点名称：@Model.webname </li>
                <li>公司名称：@Model.webcompany </li>
                <li>网站域名：@Model.weburl </li>
                <li>安装目录：@Model.webpath </li>
                <li>网站管理目录：@Model.webmanagepath </li>
                <li>附件上传目录：@Model.attachpath </li>
                <li>服务器名称：@Server.MachineName </li>
                <li>服务器IP：@Request.ServerVariables["LOCAL_ADDR"] </li>
                <li>NET框架版本：@Environment.Version.ToString()</li>
                <li>操作系统：@Environment.OSVersion.ToString()</li>
                <li>IIS环境：@Request.ServerVariables["SERVER_SOFTWARE"]</li>
                <li>服务器端口：@Request.ServerVariables["SERVER_PORT"]</li>
                <li>目录物理路径：@Request.ServerVariables["APPL_PHYSICAL_PATH"]</li>
                <li>系统版本：V @KSOA.Common.Utils.GetVersion()</li>
                <li>
                    升级通知：<asp:literal id="LitUpgrade" />
                </li>
            </ul>
            <div class="line10"></div>
        </div>
    </form>
</body>
</html>