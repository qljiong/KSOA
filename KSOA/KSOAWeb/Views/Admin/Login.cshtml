@using KSOA.Model;
@model Admin_KSCustomer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script type="text/javascript">
        $(function () {
            //检测IE
            if ($.browser.msie && $.browser.version == "6.0") {
                alert("还在使用IE6啊,这个老掉牙了.换个新一点的浏览器吧!");
            }
            $('#txtUserName').focus();
            $("form").validate({
                errorPlacement: function (lable, element) {
                    element.ligerTip({ content: lable.html(), appendIdTo: lable });
                },
                success: function (lable) {
                    lable.ligerHideTip();
                }
            });
        });
    </script>
    <title>Login</title>
</head>
<body class="loginbody">
    <form method="post">
        <div class="login_div">
            <div class="login_box">
                <div class="login_logo">LOGO</div>
                <div class="login_content">
                    <dl>
                        <dt>登录账号：</dt>
                        <dd>
                            <input type="text" id="txtUserName" name="txtUserName" class="login_input required" style="width:130px;" />
                        </dd>
                    </dl>
                    <dl>
                        <dt>登录密码：</dt>
                        <dd><input type="password" id="txtUserPwd" name="txtUserPwd" class="login_input required" style="width:130px;" /></dd>
                    </dl>
                </div>
                <div class="login_foot">
                    <div class="right"><input type="submit" id="btnSubmit" value="登 录" class="login_btn" /></div>
                </div>
                <div class="login_tip">
                    <span id="lblTip">@ViewBag.MsgTip</span>
                </div>
            </div>
            <div class="login_copyright">Copyright © 2014 Inc. All Rights Reserved.<br />旷盛文化 版权所有</div>
        </div>
    </form>
</body>
</html>
