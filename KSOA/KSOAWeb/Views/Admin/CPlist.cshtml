@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <link href="~/Content/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script src="~/Scripts/Admin/function.js"></script>
    <title>CPlist</title>
</head>
<body class="mainbody">
    <form id="form1">
        <div class="tools_box">
            <div class="tools_bar">
                <a href="../admin/addcp" class="tools_btn"><span><b class="add">添加CP</b></span></a>
                <a href="javascript:void(0);" onclick="checkAll(this);" class="tools_btn"><span><b class="all">全选</b></span></a>
                <a href="javascript:void(0);" id="btnDelete" class="tools_btn"
                   onclick="return ExePostBack('btnDelete', '', 'cp');"><span><b class="delete">批量删除</b></span></a>
            </div>
        </div>

        <!--列表展示.开始-->
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable">
            <tr>
                <th width="10%">选择</th>
                <th width="80%">CP名称</th>
                <th width="10%">操作</th>
            </tr>
            @if (ViewBag.DataSource != null)
            {
                foreach (var item in ViewBag.DataSource)
                {
                    <tr>
                        <td align="center">
                            <span class ="checkall">
                                <input type="checkbox" id="@item.ID" />
                            </span>
                        </td>
                        <td width="50" align="center">
                            <a href="../admin/EditCp/@item.ID">
                                @item.CPname
                            </a>
                        </td>
                        <td align="center">
                            <a href="../admin/editcp/@item.ID">修改</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td align="center" colspan="3">暂无记录</td></tr>
            }
        </table>
        <!--列表展示.结束-->


        <div class="line15"></div>
        <div class="page_box">
            <div id="PageContent" class="flickr right">@Html.Raw(ViewBag.PageContent)</div>
        </div>
        <div class="line10"></div>
    </form>
</body>
</html>
