@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImportExcelByMonth</title>
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script type="text/javascript">
        //表单验证
        $(function () {
            $("form").validate({
                errorPlacement: function (lable, element) {
                    element.ligerTip({ content: lable.html(), appendIdTo: lable });
                },
                success: function (lable) {
                    lable.ligerHideTip();
                }
            });
        });
        function showloading() {
            $(".showloading").show();
        }
    </script>

</head>
<body>

    @using (Html.BeginForm("ImportExcelByMonth", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div id="contentTab">
            <ul class="tab_nav">
                <li class="selected"><a onclick="tabs('#contentTab',0);" href="javascript:;">包月源数据导入</a></li>
            </ul>
            <div class="tab_con" style="display:block;">
                <table class="form_table">
                    <tbody>
                        <tr>
                            <th>CP名称：</th>
                            <td>
                                @Html.DropDownList("cpNameList", ViewBag.CpNameList as IEnumerable<SelectListItem>)
                                <input type="file" id="InputExcel" name="InputExcel" />
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <input type="submit" value="上传" />
                                <span class="uploading">正在上传，请稍候...</span>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><label>@(ViewBag.msg ?? "")</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</body>
</html>
