@using KSOA.Model;
@model Admin_KSCustomer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>编辑人员</title>
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script type="text/javascript">
        //表单验证
        $(function () {
            $("form").validate({
                errorPlacement: function (lable, element) {
                    element.ligerTip({ content: lable.html(), appendIdTo: lable });
                },
                success: function (lable) {
                    lable.ligerHideTip();
                }
            });
        });
    </script>
</head>
<body>
    <form method="post">
        <div id="contentTab">
            <ul class="tab_nav">
                <li class="selected"><a onclick="tabs('#contentTab',0);" href="javascript:;">编辑人员</a></li>
            </ul>
            <div class="tab_con" style="display:block;">
                <input type="hidden" value="@Model.ID" name="aksid" />
                <table class="form_table">
                    <tbody>
                        <tr>
                            <th>用户名：</th>
                            <td>
                                @Html.TextBox("CusName", Model.CusName, new { @class = "txtInput normal required", maxlength = "100" })
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th>真实姓名：</th>
                            <td>
                                @Html.TextBox("RealName", Model.RealName, new { @class = "txtInput normal required", maxlength = "100" })
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th>密码：</th>
                            <td>
                                @Html.TextBox("cuspwd", Model.CusPwd, new { @class = "txtInput normal required", maxlength = "30" })
                                <label>*</label>
                            </td>
                        </tr>
                        <tr>
                            <th>年龄：</th>
                            <td>
                                @Html.TextBox("age", Model.Age, new { @class = "txtInput normal number", maxlength = "100" })
                            </td>
                        </tr>
                        <tr>
                            <th>电话：</th>
                            <td>
                                @Html.TextBox("cusphonenum", Model.CusPhoneNum, new { @class = "txtInput normal", maxlength = "30" })
                            </td>
                        </tr>
                        <tr>
                            <th>邮箱：</th>
                            <td>
                                @Html.TextBox("cusemail", Model.CusEmail, new { @class = "txtInput normal email", maxlength = "50" })
                            </td>
                        </tr>
                        <tr>
                            <th>QQ：</th>
                            <td>
                                @Html.TextBox("QQ", Model.QQ, new { @class = "txtInput normal", maxlength = "50" })
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><input type="submit" id="btnSubmit" value="提交保存" class="btnSubmit" /></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><label>@(ViewBag.msg ?? "")</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</body>
</html>
