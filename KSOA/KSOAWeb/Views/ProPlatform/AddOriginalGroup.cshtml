<body>
    <form method="post">
        <div id="contentTab">
            <ul class="tab_nav">
                <li class="selected"><a onclick="tabs('#contentTab',0);" href="javascript:;">新增原创组信息</a></li>
            </ul>
            <div class="tab_con" style="display:block;">
                <table class="form_table">
                    <tbody>
                        <tr>
                            <th>版权信息：</th>
                            <td><input type="text" id="OpusCopyright" name="OpusCopyright" class=" txtinput normal required" maxlength="100" value="" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>创作信息：</th>
                            <td><input type="text" id="CreationInfo" name="CreationInfo" class=" txtinput normal required" maxlength="100" value="" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>作品名称：</th>
                            <td><input type="text" id="OpusName" name="OpusName" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>作者：</th>
                            <td><input type="text" id="OpusAuthor" name="OpusAuthor" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>销售金额：</th>
                            <td><input type="text" id="SalePrice" name="SalePrice" value="" class=" txtinput required number" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>授权平台：</th>
                            <td><input type="text" id="AccreditPlatform" name="AccreditPlatform" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>授权公司：</th>
                            <td><input type="text" id="AccreditCompany" name="AccreditCompany" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>授权日期：</th>
                            <td><input type="text" id="AccreditTime" name="AccreditTime" onfocus="WdatePicker({dateFmt: 'yyyy-MM-dd'})" readonly="readOnly" class=" txtinput normal required" maxlength="100" value="" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>授权类型：</th>
                            <td><input type="text" id="AccreditType" name="AccreditType" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>获奖情况：</th>
                            <td><input type="text" id="Awards" name="Awards" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th>原创形象相关信息：</th>
                            <td><input type="text" id="OpusMascot" name="OpusMascot" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><input type="submit" id="btnSubmit" value="提交保存" class="btnSubmit" /></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><label>@(ViewBag.msg ?? "")</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</body>
</html>
