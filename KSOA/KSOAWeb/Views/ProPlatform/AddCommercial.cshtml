                            <th>作品渠道地址：</th>
                            <td><input type="text" id="ChannelAddress" name="ChannelAddress" value="" class=" txtinput normal required" maxlength="100" /><label>*</label></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><input type="submit" id="btnSubmit" value="提交保存" class="btnSubmit" /></td>
                        </tr>
                        <tr>
                            <th></th>
                            <td><label>@(ViewBag.msg ?? "")</label></td>
                        </tr>
                    </tbody>
                </table>
