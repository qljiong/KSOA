@using KSOA.Model;
@model List<Bank_Opus>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Scripts/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <link href="~/Content/Admin/pagination.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.3.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_cn.js"></script>
    <script src="~/Scripts/ui/js/ligerBuild.min.js"></script>
    <script src="~/Scripts/Admin/function.js"></script>
    <title>CPlist</title>
</head>
<body class="mainbody">
    <form id="form1" method="post">
        <div class="tools_box">
            <div class="tools_bar">
                <div class="search_box">
                    <select name="OpType">
                        <option value="B">购买</option>
                        <option value="S">销售</option>
                    </select>
                    <input type="text" id="txtKeywords" name="txtKeywords" class="txtInput" />
                    <input type="submit" id="btnSearch" name="btnSearch" value="搜 索" class="btnSearch" />
                </div>
            </div>
        </div>

        <!--列表展示.开始-->
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable">
            <tr>
                <th>作品类型</th>
                <th>作品标题</th>
                <th>作者</th>
                <th>发布/上架时间</th>
                <th>操作</th>
            </tr>
            @if (Model.Count != 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td align="center">
                            @(item.OpType == "B" ? "购买" : "销售")
                        </td>
                        <td align="center">
                            <a href="../ProPlatform/EditOpus/@item.ID">@item.OpTitle</a>
                        </td>
                        <td align="center">
                            @item.OpAuthor
                        </td>
                        <td align="center">
                            @item.OpBeginTime
                        </td>
                        <td align="center">
                            <a href="../ProPlatform/AddCommercial/@item.ID">选中</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td align="center" colspan="5">暂无记录</td></tr>
            }
        </table>
        <!--列表展示.结束-->


        <div class="line15"></div>
        <div class="page_box">
            <div id="PageContent" class="flickr right">@Html.Raw(ViewBag.PageContent)</div>
        </div>
        <div class="line10"></div>
    </form>
</body>
</html>
